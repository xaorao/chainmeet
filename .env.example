# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:port/database"

# Wallet & Auth
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_walletconnect_project_id"
NEXT_PUBLIC_ALCHEMY_API_KEY="your_alchemy_api_key"

# NextAuth.js
NEXTAUTH_SECRET="your_nextauth_secret"
NEXTAUTH_URL="http://localhost:3000"

# Twitter OAuth (optional)
TWITTER_CLIENT_ID="your_twitter_client_id"
TWITTER_CLIENT_SECRET="your_twitter_client_secret"

# WebSocket Server URL
NEXT_PUBLIC_WS_SERVER_URL="http://localhost:3001"

# Backend CORS Origin
CORS_ORIGIN="http://localhost:3000"

# Redis (Upstash)
REDIS_URL="redis://your_redis_url"

# TURN Servers (Xirsys or Metered.ca)
# Get free TURN credentials from https://www.metered.ca/stun-turn
NEXT_PUBLIC_TURN_URL="turn:your-turn-server.metered.ca:443"
NEXT_PUBLIC_TURN_USERNAME="your_turn_username"
NEXT_PUBLIC_TURN_CREDENTIAL="your_turn_credential"

# Optional: Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn"

# Optional: PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

